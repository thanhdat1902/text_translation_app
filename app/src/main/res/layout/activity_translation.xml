<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="12dp"
            android:text="TRANSLATION"
            android:textColor="@color/light_black"
            android:fontFamily="@font/lato_black"
            android:textSize="26sp"
            android:textStyle="bold"
            android:letterSpacing="@fraction/letter_spacing"/>
<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/border_shadow"-->
<!--            android:paddingVertical="16dp"-->
<!--            android:elevation="3dp"-->
<!--            android:layout_margin="8dp"-->
<!--            android:orientation="vertical">-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="Choose language:"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="@fraction/letter_spacing"/>

        <Button
            android:letterSpacing="@fraction/letter_spacing"
            android:id="@+id/btnTranslateFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/box_2"
            android:drawableEnd="@drawable/ic_arrows_up_down"
            android:drawablePadding="20dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="English"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            tools:ignore="RtlCompat"/>

            <ImageButton
                android:id="@+id/btnExchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round_2"
                android:layout_gravity="center"
                android:padding="8dp"
                android:elevation="5dp"
                android:layout_marginVertical="-20dp"
                android:src="@drawable/ic_exchange"
                android:contentDescription="Next"
                />

        <Button
            android:letterSpacing="@fraction/letter_spacing"
            android:id="@+id/btnTranslateTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/box_2"
            android:drawableEnd="@drawable/ic_arrows_up_down"
            android:drawablePadding="20dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="20dp"
            android:text="Vietnamese"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            tools:ignore="RtlCompat"/>
<!--        </LinearLayout>-->
        <Button
            android:id="@+id/btnTranslate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:background="@drawable/button_color"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:letterSpacing="@fraction/letter_spacing"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Result:"
            android:textColor="@color/light_black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:letterSpacing="@fraction/letter_spacing"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/box">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@color/white"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                >
            </ProgressBar>
                <TextView
                    android:id="@+id/textTranslated"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:text=""
                    android:textSize="20sp"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/btnTextToSpeech"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:paddingHorizontal="10dp"
                    android:src="@drawable/ic_volume"
                    android:background="@drawable/button_round"
                    style="?android:attr/borderlessButtonStyle"
                />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnTakeNewPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take new photo"
            android:background="@drawable/button_color"
            android:layout_margin="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:paddingHorizontal="16dp"
            android:letterSpacing="@fraction/letter_spacing"
            android:textSize="15dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>