<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >


    <LinearLayout
        android:id="@+id/subLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/box"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:paddingTop="30dp"
            android:text="@string/username"
            android:textColor="@color/primary"
            android:textSize="10dp"
            android:textStyle="bold"
            android:letterSpacing="@fraction/letter_spacing"/>


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFieldLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLogin"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFieldLogin"
            android:layout_marginLeft="50dp"
            android:paddingTop="5dp"
            android:text="PASSWORD"
            android:textColor="@color/primary"
            android:textSize="10dp"
            android:textStyle="bold"
            android:letterSpacing="@fraction/letter_spacing"/>


        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:id="@+id/txtFieldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPassword"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:layout_marginTop="-25dp"
        android:textSize="15dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:text="LOGIN"
        android:layout_below="@+id/subLayout"
        android:textColor="@color/white"
        android:background="@drawable/button_color"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:letterSpacing="@fraction/letter_spacing"></Button>
</RelativeLayout>