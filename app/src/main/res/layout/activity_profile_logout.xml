<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/primary"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Information"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="70dp"
        android:textColor="@color/white"
        android:textStyle="bold"></TextView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/box_profile_info"
        >

        <TextView
            android:id="@+id/txtName"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"></TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFieldLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:layout_below="@+id/txtName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/txtUsername"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_below="@+id/txtFieldLogin"
            android:layout_marginLeft="20dp"></TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFieldUsername"
            android:layout_below="@+id/txtUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:layout_marginRight="20dp" />
        <TextView
            android:id="@+id/txtDateOfBirth"
            android:paddingTop="10dp"
            android:layout_below="@+id/txtFieldUsername"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"></TextView>
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtFieldDateOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/secondary"
            android:textStyle="bold"
            android:layout_below="@+id/txtDateOfBirth"
            android:layout_marginRight="20dp" />
        <Button
            android:id="@+id/btnChangePassword"
            android:textSize="18dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_color"
            android:textColor="@color/white"
            android:text="Change Password"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/txtFieldDateOfBirth"></Button>
        <Button
            android:id="@+id/btnLogout"
            android:layout_below="@+id/btnChangePassword"
            android:textSize="18dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_color"
            android:textColor="@color/white"
            android:text="Log out"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="10dp"></Button>
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="150dp"
        android:layout_height="122dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="139dp"
        android:src="@drawable/logo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

</RelativeLayout>