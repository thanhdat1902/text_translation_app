<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_marginTop="120dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/txtCurrentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:textColor="@color/primary"
        android:textSize="20dp"
        android:textStyle="bold"/>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtFieldCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCurrentPassword"
        android:layout_marginLeft="50dp"
        android:textColor="@color/secondary"
        android:textStyle="bold"
        android:layout_marginRight="50dp"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/txtNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textColor="@color/primary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtFieldCurrentPassword"/>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtFieldNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNewPassword"
        android:layout_marginLeft="50dp"
        android:textColor="@color/secondary"
        android:textStyle="bold"
        android:layout_marginRight="50dp"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/txtConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:textColor="@color/primary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/txtFieldNewPassword"/>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtFieldConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConfirmPassword"
        android:layout_marginLeft="50dp"
        android:textColor="@color/secondary"
        android:textStyle="bold"
        android:layout_marginRight="50dp"/>

    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/btnConfirmChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Change"
        android:background="@drawable/button_color"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtFieldConfirmPassword"
        android:padding="8dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        ></Button>

</RelativeLayout>